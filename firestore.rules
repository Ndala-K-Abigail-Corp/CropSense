rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rate limiting helper - checks if enough time has passed since last write
    function isWithinRateLimit(lastWriteTime) {
      // Allow writes if more than 1 second has passed since last write
      return request.time > lastWriteTime + duration.value(1, 's');
    }
    
    // Check daily rate limit for conversations
    function hasNotExceededDailyLimit() {
      // Check if user has a rate limit document
      let limitDoc = getAfter(/databases/$(database)/documents/userLimits/$(request.auth.uid));
      
      // If no limit doc exists, allow (will be created)
      if (!limitDoc.exists()) {
        return true;
      }
      
      // Get today's date as string (YYYY-MM-DD)
      let today = request.time.toMillis() / 86400000; // Days since epoch
      let limitDate = limitDoc.data.lastResetDate;
      
      // If it's a new day, allow (limit will be reset)
      if (today != limitDate) {
        return true;
      }
      
      // Check if under daily limit (100 conversations per day)
      return limitDoc.data.conversationsToday < 100;
    }
    
    // Check hourly message rate limit
    function hasNotExceededHourlyMessageLimit() {
      let limitDoc = get(/databases/$(database)/documents/userLimits/$(request.auth.uid));
      
      if (!limitDoc.exists()) {
        return true;
      }
      
      // Allow up to 60 messages per hour
      let hoursSinceEpoch = request.time.toMillis() / 3600000;
      let lastHour = limitDoc.data.lastMessageHour;
      
      if (hoursSinceEpoch != lastHour) {
        return true;
      }
      
      return limitDoc.data.messagesThisHour < 60;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isAdmin();
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       hasNotExceededDailyLimit();
      allow update: if isOwner(resource.data.userId) &&
                       isWithinRateLimit(resource.data.updatedAt);
      allow delete: if isOwner(resource.data.userId);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isOwner(get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId);
        // Rate limit: max 60 messages per hour
        allow create: if isAuthenticated() && 
                         request.resource.data.createdAt != null &&
                         hasNotExceededHourlyMessageLimit();
        allow update: if false; // Messages are immutable
        allow delete: if isOwner(get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId);
      }
    }
    
    // User rate limiting tracking
    match /userLimits/{userId} {
      allow read: if isOwner(userId);
      // Only the system (via Cloud Functions) should write to this
      allow write: if false;
    }
    
    // Vector chunks - server-only access
    match /vectorChunks/{chunkId} {
      allow read, write: if false; // Only accessible from backend
    }
    
    // Document processing status - public read for monitoring, system write
    match /document_status/{docId} {
      allow read: if true; // Allow users to monitor processing status
      allow write: if false; // Only via backend/Cloud Functions
    }
    
    // Gemini response cache - system only
    match /gemini_cache/{cacheKey} {
      allow read, write: if false; // Internal backend use only
    }
    
    // Gemini rate limits - users can read their own, system write
    match /gemini_rate_limits/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // Only via backend
    }
    
    // Farming knowledge - public read for knowledge base
    match /farming_knowledge/{docId} {
      allow read: if true; // Public agricultural knowledge
      allow write: if false; // Only via backend/Cloud Functions
    }
    
    // Documents metadata
    match /documents/{documentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

