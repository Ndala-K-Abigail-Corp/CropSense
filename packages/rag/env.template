# Google Cloud
GOOGLE_CLOUD_PROJECT=governnce-gap-analyzer
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Vertex AI
VERTEX_AI_LOCATION=us-central1
EMBEDDING_MODEL=text-embedding-005
EMBEDDING_DIMENSION=768
GENERATION_MODEL=gemini-2.0-flash-exp

# Gemini Configuration (for question answering)
GEMINI_ENABLED=True
GEMINI_MAX_REQUESTS_PER_HOUR=60
GEMINI_CACHE_TTL_HOURS=24
GEMINI_FALLBACK_THRESHOLD=0.5

# Firestore
FIRESTORE_DATABASE=(default)
VECTOR_COLLECTION=vectorChunks

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
MAX_CONTEXT_LENGTH=8000
SIMILARITY_THRESHOLD=0.6
FIRESTORE_BATCH_SIZE=500
EMBEDDING_BATCH_SIZE=20

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

