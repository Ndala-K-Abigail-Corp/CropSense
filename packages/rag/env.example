FIRESTORE_BATCH_SIZE=500

# RAG / Retrieval Configuration
TOP_K_RESULTS=5
MAX_CONTEXT_LENGTH=8000
SIMILARITY_THRESHOLD=0.5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

